apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: grafana-ingress
  namespace: ${NAMESPACE}
spec:
  ingressClassName: nginx
  rules:
  - http:
      paths:
      - path: /monitor
        pathType: Prefix
        backend:
          service:
            name: ${APP_NAME}
            port:
              number: 80